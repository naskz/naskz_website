---
const user = "contact";
const domain = "nask.fr";
const email = `${user}@${domain}`;
---

<button
  id="email-button"
  class="rounded-md border border-slate-300 px-4 py-2 text-slate-700 hover:bg-slate-100">
  Show email
</button>

<span id="email-address" class="ml-3 hidden text-slate-900"></span>

<script define:vars={{ email }}>
  const button = document.getElementById("email-button");
  const span = document.getElementById("email-address");

  button.addEventListener("click", () => {
    span.textContent = email;
    span.classList.remove("hidden");
    button.remove();
  });
</script>

